# Define fortran compiler and options (set when ./configure is run
# in the DarkSUSY root directory
FF=@F77@
FOPT=@FOPT@

FC=$(FF)
FFLAGS=$(FOPT) -c -I$(DINC)

# Dependencies and libraries
DINC=../../include
DOBJ=../../build

INC_DEP = dsidtag.h

vpath %.h $(DINC)

SRC = besj064.f bsir364.f dbzejy.f ddilog.f dgadap.f drkstp.f eisrs1.f \
gpindp.f mtlprt.f tql2.f tred2.f

OBJ = $(patsubst %.f,$(DOBJ)/%.o,$(SRC))

OBJF = $(patsubst %.F,$(DOBJ)/%.o,$(SRC))

all : $(OBJ) $(OBJF)

$(DOBJ)/%.o : %.F $(INC_DEP)
	$(FC) $(FFLAGS) $< -o $@

$(DOBJ)/%.o : %.f $(INC_DEP)
	$(FC) $(FFLAGS) $< -o $@
