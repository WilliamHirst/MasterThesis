# Define fortran compiler and options (set when ./configure is run
# in the DarkSUSY root directory
FF=@F77@
FOPT=@FOPT@

FC=$(FF)
FFLAGS=$(FOPT) -c -I$(DINC)

# Dependencies and libraries
DINC=../../include
DOBJ=../../build

INC_DEP = dsprep.h dsepcom.h dsdirver.h dshacom.h dshmcom.h

vpath %.h $(DINC)

SRC = dsepintgreen.f dsepintgreentab.f dsepspecm.f dsepspecmint.f \
dsepvofeps.f

OBJ = $(patsubst %.f,$(DOBJ)/%.o,$(SRC))

OBJF = $(patsubst %.F,$(DOBJ)/%.o,$(SRC))

all : $(OBJ) $(OBJF)

$(DOBJ)/%.o : %.F $(INC_DEP)
	$(FC) $(FFLAGS) $< -o $@

$(DOBJ)/%.o : %.f $(INC_DEP)
	$(FC) $(FFLAGS) $< -o $@
